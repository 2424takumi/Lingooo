{
  "expo": {
    "name": "Lingooo",
    "slug": "lingooo-mobile",
    "owner": "2424_takumi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lingooomobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lingooo.mobile",
      "buildNumber": "22",
      "infoPlist": {
        "NSUserActivityTypes": [
          "com.lingooo.mobile.search"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "lingooomobile"
            ]
          }
        ],
        "ITSAppUsesNonExemptEncryption": false,
        "NSSpeechRecognitionUsageDescription": "音声入力で単語や文章を検索できます",
        "NSMicrophoneUsageDescription": "音声入力機能を使用するためにマイクへのアクセスが必要です",
        "NSPhotoLibraryUsageDescription": "プロフィール画像の設定や画像から文字を読み取るためにフォトライブラリへのアクセスが必要です"
      }
    },
    "android": {
      "package": "com.lingooo.mobile",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "音声入力機能を使用するためにマイクへのアクセスが必要です",
          "speechRecognitionPermission": "音声入力で単語や文章を検索できます"
        }
      ],
      "expo-localization",
      "expo-audio",
      "expo-asset",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f31dae68-74e9-496e-b68c-9510615bca60"
      }
    }
  }
}
